<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="leon.designproject.CreateAccountFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageBack"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="left"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/back"
                    />

            </LinearLayout>



            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7">


            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Neuer Account"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFF"/>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:layout_height="100dp">


                <ImageView
                    android:id="@+id/imageCamera"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_image"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/camera" />

            </FrameLayout>


            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageUser"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:alpha=".75"
                    android:src="@drawable/user" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-light"
                    android:textColorHint="#73ffffff">

                    <EditText
                        android:id="@+id/editUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="#00000000"
                        android:fontFamily="sans-serif-light"
                        android:hint="Benutzername"
                        android:maxLines="1"
                        android:textColor="#FFF" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="-8dp"
                android:alpha="0.75"
                android:background="#ffffff"></RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageLock"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:alpha=".75"
                    android:src="@drawable/lock" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-light"
                    android:textColorHint="#73ffffff">

                    <EditText
                        android:textSize="16dp"
                        android:id="@+id/editPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="#00000000"
                        android:fontFamily="sans-serif-light"
                        android:hint="Passwort"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="#FFF" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="0dp"
                android:alpha="0.75"
                android:background="#ffffff"></RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageGrade"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:alpha=".75"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grade" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password3"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-light"
                    android:textColorHint="#73ffffff">

                    <EditText
                        android:textSize="16dp"
                        android:id="@+id/editGrade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="#00000000"
                        android:fontFamily="sans-serif-light"
                        android:hint="Stufe"
                        android:maxLines="1"
                        android:textColor="#FFF" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="0dp"
                android:alpha="0.75"
                android:background="#ffffff"></RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageEmail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:alpha=".75"
                    android:src="@drawable/email" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password4"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-light"
                    android:textColorHint="#73ffffff">

                    <EditText
                        android:textSize="16dp"
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="#00000000"
                        android:fontFamily="sans-serif-light"
                        android:hint="Email"
                        android:maxLines="1"
                        android:textColor="#FFF"
                        android:inputType="textEmailSubject" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="0dp"
                android:alpha="0.75"
                android:background="#ffffff"></RelativeLayout>



        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="0.2">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:gravity="center"
                        android:background="@drawable/roundedbutton"
                        android:textColor="#FFF"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="Sign up"
                        android:id="@+id/textViewSignUp" />

                    <com.victor.loading.rotate.RotateLoading
                        android:id="@+id/rotateloading"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        app:loading_width="2dp"
                        app:loading_color="#ffffff"
                        android:layout_gravity="center"/>

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>



    </FrameLayout>

</FrameLayout>
